# Staging Environment Configuration
# This file should be used when deploying to staging

# API Configuration
NEXT_PUBLIC_API_URL=https://heya-pos-staging-api.vercel.app/api
NEXT_PUBLIC_ENVIRONMENT=staging

# Authentication
JWT_SECRET=your-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=30d

# Payment Gateway (Test Mode)
NEXT_PUBLIC_TYRO_ENV=test
NEXT_PUBLIC_TYRO_MERCHANT_ID=test-merchant-id

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_SHOW_ERROR_DETAILS=true

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SENTRY_DSN=