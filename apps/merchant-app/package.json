{
  "name": "merchant-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "DEV_SERVICE_DETACH=0 ./dev-service.sh start",
    "dev:direct": "next dev -p 3002",
    "dev:clean": "./start-dev-clean.sh",
    "dev:old": "./start-dev.sh",
    "dev:service": "./dev-service.sh",
    "dev:turbo": "turbo dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:strict": "npm run typecheck:strict && npm run lint:strict && npm run build",
    "build:monitor": "node scripts/build-monitor.js",
    "start": "./dev-service.sh start",
    "stop": "./dev-service.sh stop",
    "lint": "next lint",
    "lint:strict": "next lint --config .eslintrc.build.json",
    "typecheck": "if [ \"$ENABLE_MERCHANT_TYPECHECK\" = \"true\" ]; then tsc --noEmit; else echo 'Skipping merchant-app typecheck (set ENABLE_MERCHANT_TYPECHECK=true to enable)'; fi",
    "typecheck:strict": "tsc --project tsconfig.strict.json --noEmit",
    "validate": "ts-node scripts/build-validate.ts",
    "clean": "./scripts/dev-clean.sh"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heya-pos/shared": "*",
    "@heya-pos/types": "*",
    "@heya-pos/ui": "*",
    "@heya-pos/utils": "*",
    "@supabase/supabase-js": "^2.50.3",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@tanstack/react-table": "^8.21.3",
    "@types/lodash": "^4.17.17",
    "@types/lodash.debounce": "^4.0.9",
    "axios": "^1.9.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.1",
    "jose": "^6.0.11",
    "lodash": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "next": "15.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.15.3",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.6",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "critters": "^0.0.23",
    "eslint": "^8",
    "eslint-config-next": "15.3.2",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
