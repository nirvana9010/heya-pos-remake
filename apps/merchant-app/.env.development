# Development Environment Optimizations
# Phase 3: Build System Improvements

# Next.js Development Optimizations
NEXT_TELEMETRY_DISABLED=1
WATCHPACK_POLLING=true

# Faster HMR
NEXT_PUBLIC_DISABLE_SPEEDY=false

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Development Features
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Performance Monitoring (development only)
NEXT_PUBLIC_ENABLE_PERFORMANCE_MARKS=true

# Real-time Notifications
# Set to 'true' to enable Supabase Realtime (default), 'false' to use SSE
NEXT_PUBLIC_ENABLE_SUPABASE_REALTIME=true