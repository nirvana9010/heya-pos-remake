# Merchant App Environment Configuration Template
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature Flags
NEXT_PUBLIC_SHOW_DEMO_CREDENTIALS=true
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MARKS=true

# Tyro EFTPOS Integration
# Get these from your Tyro dashboard
NEXT_PUBLIC_TYRO_API_KEY=your-tyro-api-key
NEXT_PUBLIC_TYRO_CLIENT_ID=your-tyro-client-id
NEXT_PUBLIC_TYRO_MERCHANT_ID=your-tyro-merchant-id
NEXT_PUBLIC_TYRO_ENVIRONMENT=production

# Development Authentication Token (optional)
# For local development only - DO NOT use in production
# Generate with: ./scripts/dev-auth.sh get
DEV_MERCHANT_TOKEN=

# Next.js Optimizations
NEXT_TELEMETRY_DISABLED=1
WATCHPACK_POLLING=true