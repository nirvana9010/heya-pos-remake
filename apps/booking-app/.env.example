# Copy this file to .env.local and update with your values
# DO NOT commit .env files to git!

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Merchant Detection Mode
# Options: 'subdomain' | 'path' | 'query'
# - subdomain: merchant.example.com
# - path: example.com/merchant
# - query: example.com?merchant=merchant
NEXT_PUBLIC_MERCHANT_DETECTION_MODE=path

# Optional: Default merchant for development
# NEXT_PUBLIC_DEFAULT_MERCHANT=hamilton